#!/usr/bin/env bash
# Installs and configure on lb-01 server
apt-get -y update
apt-get -y install --no-install-recommends software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-2.8
apt-get -y update
apt-get -y install haproxy=2.8.\*
balancer_conf="\
frontend http_front
    bind *:80
    mode http
    default_backend http_back

backend http_back
    balance roundrobin
    server 520327-web-01 52.86.133.238:80 check
    server 520327-web-02 52.87.211.253:80 check
"
echo "$balancer_conf" >> /etc/haproxy/haproxy.cfg
service haproxy restart
